{deps_dir, ["../../deps"]}.
{deps, [{sh, ".*", {git, "git://github.com/synrc/sh", "HEAD"}}]}.

{port_env,
 [{"darwin", "LDFLAGS", "-framework CoreFoundation -framework CoreServices"},
  {"darwin", "CC", "clang"},
  {"darwin", "CFLAGS", "-Wno-deprecated-declarations"},
  {"linux", "CFLAGS", "-O2 -g -Wall -Wextra -Werror"}]}.

{port_specs,
 [{"darwin", "priv/mac_listener", ["c_src/mac/*.c"]},
  {"linux", "priv/linux_listener", ["c_src/linux/*.c"]}]}.
